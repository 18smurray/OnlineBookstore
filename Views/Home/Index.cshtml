@{
    ViewData["Title"] = "Home Page";
}

<!--Tells View what data type to expect Model data passed in controller to be in-->
@model IQueryable<Book>

<div>
    <h1>Welcome to the Online Bookstore</h1>
</div>
<br /><br />

<!--For each Book in the Model, add styling and print out property information-->
@foreach (var x in Model)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @x.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@x.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        Author: @x.AuthorLastName, @x.AuthorFirstName @x.AuthorMiddleName<br />
        Classification/Category: @x.Classification/@x.Category<br />
        Publisher: @x.Publisher<br />
        ISBN: @x.ISBN
    </div>
</div>
<br />
}


