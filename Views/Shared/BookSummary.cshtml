<!--Partial View - Serve as a summary of a single book
    Can use display book functionality accross multiple pages
    Piece partial views together for new pages-->

<!--Anticipates Model of type "Book" passed when partial view is referenced (index page)-->
@model Book

<div class="card card-outline-primary shadow p-2 mb-4 bg-light rounded">
    <div class="card-header">
        <small>ISBN: @Model.ISBN</small>
    </div>

    <div class="card-body">
        <h3 class="card-title">
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h3>
        <p>
            Author: @Model.AuthorLastName, @Model.AuthorFirstName @Model.AuthorMiddleName<br />
            Classification: @Model.Classification; Category: @Model.Category<br />
            Publisher: @Model.Publisher<br />
            Number of Pages: @Model.PageCount
        </p>
    </div>

    <!--Creating a purchase button-->
    <form id="@Model.BookId" asp-page="/purchase" method="post">

        <!--hidden inputs - pass  the desired preset data when the 'form' is submitted - user doesn't enter anything-->
        <input type="hidden" asp-for="BookId" />
        <!--Keeps track of current url - uses the PathAndQuery method to retain the url you're navigating away from-->
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right" >
                Add to Cart
            </button>
        </span>
    </form>


</div>
